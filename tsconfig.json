{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES6",
    "module": "commonjs", 
    "lib": [
      "es2015",
      "ES2022",
    ],
    "outDir": ".build",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@apps/*": ["src/apps/*"],
      "@shared/*": ["src/shared/*"],
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}